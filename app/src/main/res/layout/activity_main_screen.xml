<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/bOrderMeal"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginTop="124dp"
        android:text="@string/strOrder"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bCheckOrdering"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:text="@string/strCheckOrdering"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/bOrderMeal"
        app:layout_constraintTop_toBottomOf="@+id/bOrderMeal" />

    <Button
        android:id="@+id/bLoginOrSign"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:text="@string/strLoginOrSign"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/bCheckOrdering"
        app:layout_constraintTop_toBottomOf="@+id/bCheckOrdering" />

    <Button
        android:id="@+id/bHelp"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="84dp"
        android:text="@string/strHelp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bLoginOrSign"
        app:layout_constraintTop_toBottomOf="@+id/bLoginOrSign"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>