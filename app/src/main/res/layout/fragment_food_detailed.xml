<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.source.code.fragment.FoodDetailedFragment">


    <ImageView
        android:id="@+id/ivDetailedFoodImage"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="?attr/actionModeBackground" />

    <LinearLayout
        android:id="@+id/llDetailedFoodInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDetailedFoodImage"
        android:layout_marginStart="@dimen/paddingLeft"
        android:layout_marginEnd="@dimen/paddingRight"
        android:layout_marginTop="@dimen/paddingTop">

        <TextView
            android:id="@+id/tvDetailedFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜名："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvDetailedFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDetailedRemark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/llDetailedFoodInfo"
        android:layout_marginStart="@dimen/paddingLeft"
        android:layout_marginEnd="@dimen/paddingRight"
        android:layout_marginTop="@dimen/paddingTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/etDetailedFoodRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <Button
        android:id="@+id/bDetailedSubmittedOrUn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llDetailedRemark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/paddingTop"
        android:gravity="center"
        android:text="点菜" />


</RelativeLayout>
